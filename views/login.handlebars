<h2 class="page-header">Log In</h2>

{{#if errors}}
	{{#each errors}}
		<div class='alert alert-danger'>{{msg}}</div>
	{{/each}}
{{/if}}
<form id="LogIn" method="POST">
	<div class="form-group">
		<label>Email:</label>
		<input type="text" id="email" name="email" class="form-control" placeholder="Email" value={{fields.email}}><br>
		<label>Password:</label>
		<input type="password" id="password" class="form-control" name="password" placeholder="Password"><br>
		<input type="submit" value="Submit" >
	</div>
</form>


